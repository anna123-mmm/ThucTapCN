<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{movie.title}} - Trailer | FlixGo</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/movie-watch.css">
</head>
<body>
    <div class="watch-container">
        <div class="watch-header">
            <h1 class="watch-title">{{movie.title}}</h1>
            <p class="watch-subtitle">{{#if movie.year}}({{movie.year}}){{/if}} - Trailer</p>
        </div>
        
        <div class="watch-content">
            <div class="video-section">
                <div id="video-container" class="video-container">
                    {{#if movie.trailerId}}
                        <iframe
                            src="https://www.youtube.com/embed/{{movie.trailerId}}?autoplay=0&controls=1&showinfo=0&rel=0&modestbranding=1"
                            allowfullscreen
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            title="{{movie.title}} Trailer">
                        </iframe>
                    {{else}}
                        <div class="loading">
                            <div class="spinner"></div>
                            <p>Finding trailer...</p>
                        </div>
                    {{/if}}
                </div>
            </div>
            
            <div class="info-section">
                {{#if movie.poster}}
                <div class="movie-poster">
                    <img src="{{movie.poster}}" 
                         alt="{{movie.title}}" 
                         onerror="this.style.display='none'">
                </div>
                {{else if movie.posterPath}}
                <div class="movie-poster">
                    <img src="https://image.tmdb.org/t/p/w500{{movie.posterPath}}" 
                         alt="{{movie.title}}" 
                         onerror="this.style.display='none'">
                </div>
                {{/if}}
                
                <div class="movie-info">
                    <h3 class="info-title">Movie Information</h3>
                    <div class="info-item">
                        <i class="icon ion-md-calendar"></i>
                        <span>{{#if movie.year}}{{movie.year}}{{else}}Unknown{{/if}}</span>
                    </div>
                    <div class="info-item">
                        <i class="icon ion-md-pricetags"></i>
                        <span>
                            {{#if movie.genres}}
                                {{join movie.genres ", "}}
                            {{else}}
                                Uncategorized
                            {{/if}}
                        </span>
                    </div>
                    <div class="info-item">
                        <i class="icon ion-md-star"></i>
                        <span>{{#if movie.rating}}{{movie.rating}}/10{{else}}Not rated{{/if}}</span>
                    </div>
                    {{#if movie.releaseDate}}
                    <div class="info-item">
                        <i class="icon ion-md-film"></i>
                        <span>{{movie.releaseDate}}</span>
                    </div>
                    {{/if}}
                </div>
                
                {{#if movie.overview}}
                <div class="movie-description">
                    <h3 class="description-title">Plot Summary</h3>
                    <p class="description-text">{{movie.overview}}</p>
                </div>
                {{/if}}
                
                <div class="action-buttons">
                    <a href="/movies/{{movie._id}}" class="btn btn-primary">
                        <i class="icon ion-ios-arrow-back"></i>
                        Movie Details
                    </a>
                    <a href="/" class="btn btn-secondary">
                        <i class="icon ion-ios-home"></i>
                        Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
    console.log('üé¨ Movie Watch Page - {{movie.title}}');
    console.log('üìä Movie Data:', {
        id: '{{movie._id}}',
        title: '{{movie.title}}',
        trailerId: '{{movie.trailerId}}',
        posterPath: '{{movie.posterPath}}'
    });
    
    {{#unless movie.trailerId}}
    console.log('üîç No trailer ID found, fetching from API...');
    
    (async function(){
        try {
            const response = await fetch('/movies/{{movie._id}}/trailer');
            const data = await response.json();
            const container = document.getElementById('video-container');
            
            console.log('üì° API Response:', data);
            
            if (data.success && data.videoId) {
                console.log('‚úÖ Trailer found:', data.videoId);
                container.innerHTML = `
                    <iframe
                        src="https://www.youtube.com/embed/${encodeURIComponent(data.videoId)}?autoplay=0&controls=1&showinfo=0&rel=0&modestbranding=1"
                        allowfullscreen
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        title="{{movie.title}} Trailer">
                    </iframe>
                `;
                
                // Update status
                document.querySelector('.video-status').innerHTML = '‚úÖ Trailer loaded - ID: ' + data.videoId;
            } else {
                console.log('‚ùå No trailer found');
                const movieTitle = encodeURIComponent('{{movie.title}}');
                container.innerHTML = `
                    <div class="not-found">
                        <i class="icon ion-ios-sad"></i>
                        <p>No trailer found for this movie</p>
                        <div class="external-links">
                            <a href="https://www.youtube.com/results?search_query=${movieTitle}%20trailer" target="_blank" class="external-link">
                                <i class="icon ion-logo-youtube"></i>
                                Search on YouTube
                            </a>
                            <a href="https://www.themoviedb.org/search?query=${movieTitle}" target="_blank" class="external-link">
                                <i class="icon ion-md-search"></i>
                                Search on TMDB
                            </a>
                        </div>
                    </div>
                `;
                
                // Update status
                document.querySelector('.video-status').innerHTML = '‚ùå No trailer found';
            }
        } catch (error) {
            console.error('üí• Error loading trailer:', error);
            document.getElementById('video-container').innerHTML = `
                <div class="error-message">
                    <i class="icon ion-ios-warning"></i>
                    <p>Error loading trailer</p>
                    <p style="font-size: 0.9rem; color: #999;">Please try again later</p>
                </div>
            `;
            
            // Update status
            document.querySelector('.video-status').innerHTML = 'üí• Error loading trailer';
        }
    })();
    {{/unless}}
    </script>
</body>
</html>
</content>