<section class="content search-section"></section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section__title">Search Results ({{movies.length}} found)</h2>
                
                {{#if movies}}
                    <div class="search-results-grid">
                        {{#each movies}}
