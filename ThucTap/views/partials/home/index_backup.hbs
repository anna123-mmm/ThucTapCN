                                <h3 class="card__title"><a href="/movies/{{_id}}">{{title}}</a></h3>
                                <span class="card__category card__category--search">
                                    {{#if genres}}
                                        {{#each genres}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
                                    {{else}}
                                        Uncategorized
                                    {{/if}}
                                </span>
                                <span class="card__rate">
                                    <i class="icon ion-ios-star"></i>
