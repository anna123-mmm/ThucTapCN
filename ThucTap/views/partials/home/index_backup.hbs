<!-- blog -->
<section class="home">
    <!-- blog bg -->
    <div class="owl-carousel home__bg">
        <div class="item home__cover" data-bg="img/home/home__bg.jpg"></div>
        <div class="item home__cover" data-bg="img/home/home__bg2.jpg"></div>
        <div class="item home__cover" data-bg="img/home/home__bg3.jpg"></div>
        <div class="item home__cover" data-bg="img/home/home__bg4.jpg"></div>
    </div>
    <!-- end blog bg -->

    <div class="container">
        <div class="row">
            <div class="col-12">
                {{#if isSearchResult}}
                    <h1 class="home__title">SEARCH RESULTS {{#if searchQuery}}FOR "<b>{{searchQuery}}</b>"{{/if}}</h1>
                {{else}}
                    <h1 class="home__title"><b>NEW MOVIES</b> UPDATED</h1>
                {{/if}}

                <button class="home__nav home__nav--prev" type="button">
                    <i class="icon ion-ios-arrow-round-back"></i>
                </button>
                <button class="home__nav home__nav--next" type="button">
                    <i class="icon ion-ios-arrow-round-forward"></i>
                </button>
            </div>

            {{#unless isSearchResult}}
            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    {{#if movies}}
                      {{#each movies}}
                      <div class="item">
                          <!-- card -->
                          <div class="card card--big">
                              <div class="card__cover">
                                  {{#if posterPath}}
                                  <img src="https://image.tmdb.org/t/p/w500{{posterPath}}" alt="{{title}}">
                                {{else}}
                                  <img src="img/covers/cover.jpg" alt="{{title}}">
                                {{/if}}
                                  <a href="/movies/{{_id}}/watch" class="card__play">
                                      <i class="icon ion-ios-play"></i>
                                  </a>
                                  <span class="card__favorite" onclick="toggleFavorite('{{_id}}')">
                                      <i class="icon ion-ios-heart"></i>
                                  </span>
                              </div>
                              <div class="card__content">
                                  <h3 class="card__title"><a href="/movies/{{_id}}">{{title}}</a></h3>
                                  <span class="card__category">
                                    {{#if genres}}
                                      {{#each genres}}<a href="/movies?genre={{this}}">{{this}}</a>{{/each}}
                                    {{else}}
                                      <a href="#">Uncategorized</a>
                                    {{/if}}
                                  </span>
                                  <span class="card__rate"><i class="icon ion-ios-star"></i>{{#if rating}}{{rating}}{{else}}N/A{{/if}}</span>
                              </div>
                          </div>
                          <!-- end card -->
                      </div>
                      {{/each}}
                    {{else}}
                      <!-- Fallback content when no movies -->
                      <div class="item">
                          <div class="card card--big">
                              <div class="card__cover">
                                  <img src="img/covers/cover.jpg" alt="">
                                  <a href="/movies" class="card__play">
                                      <i class="icon ion-ios-play"></i>
                                  </a>
                              </div>
                              <div class="card__content">
                                  <h3 class="card__title"><a href="/">Discover Movies</a></h3>
                                  <span class="card__category">
                                      <a href="/">View All</a>
                                  </span>
                                  <span class="card__rate"><i class="icon ion-ios-star"></i>N/A</span>
                              </div>
                          </div>
                      </div>
                    {{/if}}
                </div>
            </div>
            {{/unless}}
        </div>
    </div>
</section>
<!-- end blog -->

{{#if isSearchResult}}
