
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Chỉnh Sửa Thể Loại: {{category.name}}</h4>
                    <a href="/admin/category" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay Lại Danh Sách
                    </a>
                </div>
                <div class="card-body">
                    {{#if error_message}}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fa fa-exclamation-circle"></i> {{error_message}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {{/if}}

                    <form action="/admin/category/edit/{{category._id}}?_method=PUT" method="POST" id="editCategoryForm">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label for="name" class="form-label">
                                        Tên Thể Loại <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="name" 
                                           name="name" 
                                           value="{{category.name}}"
                                           placeholder="Nhập tên thể loại/thể loại"
                                           required
                                           maxlength="50">
                                    <div class="form-text">Tên thể loại phải là duy nhất và sẽ được sử dụng trong phân loại phim</div>
                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label">Mô Tả</label>
                                    <textarea class="form-control" 
                                              id="description" 
                                              name="description" 
                                              rows="3"
                                              placeholder="Nhập mô tả ngắn gọn về thể loại/thể loại này (tùy chọn)"
                                              maxlength="200">{{category.description}}</textarea>
                                    <div class="form-text">Mô tả tùy chọn để giúp xác định thể loại</div>
                                </div>

                                <div class="mb-3">
                                    <label for="status" class="form-label">Trạng Thái</label>
                                    <select class="form-select" id="status" name="status">
                                        <option value="true" {{#if category.status}}selected{{/if}}>Hoạt Động</option>
                                        <option value="false" {{#unless category.status}}selected{{/unless}}>Không Hoạt Động</option>
                                    </select>
                                    <div class="form-text">Chỉ các thể loại hoạt động mới được hiển thị ở frontend</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Thông Tin Thể Loại</h6>
                                        <ul class="list-unstyled small">
                                            <li><strong>Được Tạo:</strong> 
                                                {{#if category.createdAt}}
                                                    {{category.createdAt}}
                                                {{else}}
                                                    N/A
                                                {{/if}}
                                            </li>
                                            <li><strong>Cập Nhật Lần Cuối:</strong> 
                                                {{#if category.updatedAt}}
                                                    {{category.updatedAt}}
                                                {{else}}
                                                    N/A
                                                {{/if}}
                                            </li>
                                            <li><strong>Trạng Thái Hiện Tại:</strong> 
                                                {{#if category.status}}
                                                    <span class="badge bg-success">Hoạt Động</span>
                                                {{else}}
                                                    <span class="badge bg-secondary">Không Hoạt Động</span>
                                                {{/if}}
                                            </li>
                                        </ul>
                                        
                                        <div class="alert alert-warning mt-3" role="alert">
                                            <small>
                                                <i class="fa fa-exclamation-triangle"></i>
                                                <strong>Lưu ý:</strong> Thay đổi tên thể loại sẽ cập nhật tất cả phim sử dụng thể loại này.
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="/admin/category" class="btn btn-secondary">
                                        <i class="fa fa-times"></i> Hủy
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-save"></i> Cập Nhật Thể Loại
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('editCategoryForm');
    const nameInput = document.getElementById('name');
    
    // Auto-format category name to title case
    nameInput.addEventListener('blur', function() {
        const value = this.value.trim();
        if (value) {
            // Convert to title case
            const titleCase = value.toLowerCase().replace(/\b\w/g, l => l.toUpperCase());
            this.value = titleCase;
        }
    });
    
    // Form validation
    form.addEventListener('submit', function(e) {
        const name = nameInput.value.trim();
        
        if (!name) {
            e.preventDefault();
            alert('Vui lòng nhập tên thể loại');
            nameInput.focus();
            return false;
        }
        
        if (name.length < 2) {
            e.preventDefault();
            alert('Tên thể loại phải có ít nhất 2 ký tự');
            nameInput.focus();
            return false;
        }
        
        // Confirm if user is changing the name
        const originalName = '{{category.name}}';
        if (name !== originalName) {
            const confirmed = confirm(
                `Bạn có chắc chắn muốn thay đổi tên thể loại từ "${originalName}" thành "${name}" không?\n\n` +
                'Điều này sẽ cập nhật tất cả phim sử dụng thể loại này.'
            );
            if (!confirmed) {
                e.preventDefault();
                return false;
            }
        }
    });
});
</script>
